---
import Layout from '../../layouts/Layout.astro';

const allPosts = await Astro.glob('../posts/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<Layout title='Tags'>
  <main>
    <section
      class='relative isolate overflow-hidden px-6 py-12 sm:py-16 lg:px-8'
    >
      <div class='mx-auto max-w-2xl lg:max-w-4xl'>
        <h2>Tags</h2>

        <div>
            {tags.map((tag) => (
              <span class="bg-blue-300 text-blue-800 text-xs font-medium mr-2 px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300"><a href={`/tags/${tag}`}>{tag}</a></span>
            ))}
          </div>
      </div>
    </section>
  </main>
</Layout>
